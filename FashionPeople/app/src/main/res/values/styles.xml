<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/colorBlack</item> <!--그냥 이렇게 일일히 변경해주어도 되고-->
        <item name="tabIndicatorColor">@color/colorDarkYellow</item> <!--글씨 밑에 indicator 색상 변경-->
        <item name="tabIndicatorHeight">2dp</item> <!--indicator 두께-->
        <!--<item name="tabIndicatorFullWidth">false</item>--> <!--indicator 꽉차지않게-->
        <item name="tabTextAppearance">@style/TabTextAppearance</item> <!-- 여기서 한번에 바꾸어 줘도 된다.-->
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">true</item> <!--text의 소문자를 모두 대문자로 만듬-->
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">13sp</item>
    </style>



    <style name="MyActionBarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="displayOptions">showHome|homeAsUp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkgray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="HomeFeedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/darkGray2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="PositiveButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="NegativeButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:theme">@style/SelectableItemTheme</item>
    </style>

    <style name="SelectableItemTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <style name="CommentTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TagTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="RatingTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">37sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="BodyTextStyle">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RoundCornerBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top</item>
        <item name="theme">@style/AppTheme</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
    </style>

</resources>
