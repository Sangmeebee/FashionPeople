<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimaryDark</item> <!--글씨 밑에 indicator 색상 변경-->
        <item name="tabIndicatorHeight">4dp</item> <!--indicator 두께-->
        <!--<item name="tabIndicatorFullWidth">false</item>--> <!--indicator 꽉차지않게-->
        <item name="tabTextAppearance">@style/HomeTabTextAppearance
        </item> <!-- 여기서 한번에 바꾸어 줘도 된다.-->
    </style>

    <style name="HomeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="tabTextColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15dp</item>
        <item name="textAllCaps">true</item> <!--text의 소문자를 모두 대문자로 만듬-->
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textSize">15dp</item>
    </style>


    <style name="MyActionBarStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="displayOptions">showHome|homeAsUp</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow</item>
    </style>

    <style name="RatingBarStyle" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/darkgray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="HomeFeedTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailScoreTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">26dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BrandNameTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxEms">5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="InfoTagTitleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="InfoTagContentTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>


    <style name="SelectableItemTheme" parent="ThemeOverlay.MaterialComponents">
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">viewStart</item>
    </style>

    <style name="EvaluationTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CommonTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="SmallCommonTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="RatingTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">39dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundCornerBottomSheetStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalStyle</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="ModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_top</item>
        <item name="behavior_peekHeight">450dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:background">@drawable/toggle_background</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="InputEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18dp</item>
    </style>

    <style name="SearchEditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/lightgray</item>
    </style>

</resources>
