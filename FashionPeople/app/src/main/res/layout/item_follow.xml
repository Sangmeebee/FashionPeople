<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolsNs="http://schemas.android.com/tools">

    <data>

        <variable
            name="follow"
            type="com.sangmee.fashionpeople.data.model.FUser" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_border_color="@color/colorGray"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            toolsNs:src="@drawable/ic_person" />

        <LinearLayout
            android:id="@+id/ll_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="vertical"
            android:paddingVertical="10dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ygd_320"
                android:text="닉네임"
                android:textColor="@android:color/black" />

            <LinearLayout
                android:id="@+id/ll_is_visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toRightOf="@+id/iv_profile">

                <View
                    android:layout_width="0dp"
                    android:layout_height="10dp" />

                <TextView
                    android:id="@+id/tv_intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ygd_320"
                    android:text="소개글" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="팔로우"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/ygd_330"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@color/colorYellow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
