<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolsNs="http://schemas.android.com/tools">

    <data>

        <variable
            name="feedImage"
            type="com.sangmee.fashionpeople.data.model.FeedImage" />

        <variable
            name="myId"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        toolsNs:background="@color/colorBlack">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_item_evaluate_feed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!--추후 이미지 생기면 wrap_content로 변경-->
        <ImageView
            android:id="@+id/iv_save_image"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:contentDescription="이미지 저장"
            app:layout_constraintBottom_toBottomOf="@id/ll_comment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/ll_comment" />


        <LinearLayout
            android:id="@+id/ll_comment"
            setVisibleLinearLayout="@{feedImage}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/background_comment"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/rb_following_feed"
            app:layout_constraintEnd_toStartOf="@id/iv_save_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/rb_following_feed"
            app:myId="@{myId}">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_comment_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                app:civ_border_color="@color/colorWhite"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                toolsNs:text="000님의 댓글 외 0개의 댓글이 있습니다." />
        </LinearLayout>


        <RatingBar
            android:id="@+id/rb_following_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="0.5"
            android:theme="@style/RatingBarStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:myId="@{myId}"
            app:setVisibleRating="@{feedImage}"
            toolsNs:visibility="visible" />

        <TextView
            android:id="@+id/tv_user_name_home_feed"
            style="@style/HomeFeedTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:ellipsize="end"
            android:text="@{feedImage.user.name}"
            app:layout_constraintBottom_toTopOf="@id/rv_tags_home_feed"
            app:layout_constraintStart_toEndOf="@id/iv_profile_evaluate_feed"
            toolsNs:text="서승환" />

        <TextView
            android:id="@+id/tv_follow_unfollow"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/tv_user_name_home_feed"
            app:layout_constraintStart_toEndOf="@id/tv_user_name_home_feed"
            app:layout_constraintTop_toTopOf="@id/tv_user_name_home_feed"
            toolsNs:text="팔로잉" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_evaluate_feed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginBottom="12dp"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_user_name_home_feed"
            toolsNs:src="@drawable/ic_person_white" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags_home_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:scrollbars="vertical"
            setFeedImageTags="@{feedImage}"
            app:layout_constraintBottom_toTopOf="@id/rb_following_feed"
            app:layout_constraintStart_toStartOf="parent" />
        <!--        <TextView
                    android:id="@+id/tv_info_home_feed"
                    style="@style/HomeFeedTextStyle"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toTopOf="@id/rb_home_feed"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="abacascasdsfasd"
                    toolsNs:text="#엠엘비 #나이키 # 아디다스 #구찌 #마르지엘라" />-->


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
