<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:toolsNs="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="feedImage"
            type="com.sangmee.fashionpeople.data.model.FeedImage" />

        <variable
            name="canEvaluate"
            type="Boolean" />

        <variable
            name="isSaved"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        toolsNs:background="@color/colorWhite">

        <LinearLayout
            android:id="@+id/ll_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/rv_tags_home_feed"
            app:layout_constraintTop_toTopOf="parent">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_following_feed"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:civ_border_color="@color/colorBlack"
                app:civ_border_width="2dp"
                toolsNs:src="@drawable/ic_person_black" />

            <TextView
                android:id="@+id/tv_user_name_home_feed"
                style="@style/HomeFeedTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:ellipsize="end"
                android:text="@{feedImage.user.name}"
                toolsNs:text="000" />
        </LinearLayout>


        <ImageView
            android:id="@+id/iv_item_following_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/ll_container" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags_home_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_following_feed"
            app:setFeedImageTags="@{feedImage}" />


        <LinearLayout
            android:id="@+id/ll_rating_average"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="@{canEvaluate ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@id/cl_comment"
            app:layout_constraintStart_toStartOf="@id/rv_tags_home_feed">

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star_yellow_24" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_rating"
                style="@style/DetailScoreTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center"
                app:setRatingText="@{feedImage}"
                toolsNs:text="4.0" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:visibility="@{canEvaluate ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginEnd="100dp"
                android:background="@drawable/background_comment"
                android:gravity="center"
                android:text="댓글로 폭풍 칭찬해주세요~!"
                android:textColor="@color/colorBlack"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_save_image"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/iv_save_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_save_image"
                android:padding="8dp"
                android:src="@drawable/ic_photo_saved_black"
                android:visibility="@{isSaved ? View.GONE : View.VISIBLE}"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/iv_delete_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_delete_image"
                android:padding="8dp"
                android:src="@drawable/ic_photo_delete"
                android:visibility="@{isSaved ? View.VISIBLE : View.GONE}"
                app:civ_border_width="1dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/rb_following_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:isIndicator="false"
            android:numStars="5"
            android:stepSize="1"
            android:theme="@style/RatingBarStyle"
            android:visibility="@{canEvaluate ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
